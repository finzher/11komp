#pragma once

enum PacketType {
    LOGIN,      // Первый пакет при входе (никнейм)
    MESSAGE,    // Обычное сообщение всем
    PRIVATE,    // Личное сообщение
    SERVER_MSG  // Служебное сообщение от сервера (кто-то зашел/вышел)
};

struct Packet {
    int type;           // Тип пакета (из enum выше)
    char targetNick[32];// Ник получателя (только для PRIVATE)
    char text[256];     // Само сообщение или ник отправителя
};
